{
  "name": "contracts",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "contracts": "file:",
    "dotenv": "^16.4.5"
  },
  "scripts": {
    "compile": "npx hardhat compile && cd .. && cd server && npm run start",
    "deploy": "npx hardhat run ./deploy/deploy.js",
    "localnode": "npx hardhat node",
    "start": "concurrently \"npm run compile\" \"npm run localnode\" \"npm run deploy\" "
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^2.0.1",
    "@openzeppelin/contracts": "^4.8.2",
    "concurrently": "^9.0.1",
    "hardhat": "^2.22.13"
  }
}
